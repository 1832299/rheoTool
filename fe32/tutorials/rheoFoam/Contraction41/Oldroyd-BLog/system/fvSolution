solvers
{
    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-10;
        relTol           0;
        minIter          0;
        maxIter          800;
        
    }

    U
    {

        solver           BiCGStab;
        preconditioner
        {
            preconditioner ILU0;
        }

        tolerance         1e-8;
        relTol            0;
        minIter           0;
        maxIter           1000;
    }

   "(theta|tau)"
    {

        solver           PBiCG;
        preconditioner
        {
            preconditioner DILU;
        }

        tolerance         1e-12;
        relTol            0;
        minIter           0;
        maxIter           1000;
    }
 
}

